@model List<pracAsp.Models.Product>
@{
    ViewBag.Title = "Index";
}



<h2>Product Details</h2>
@Html.ActionLink("Add new","Create","Products")

<div class="row">
    <div class="col-md-4">
        <table class="table table-condensed table-hover">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Product Name
                </th>
            </tr>
            @foreach (var prd in Model)
            {
                <tr>
                   <td>@prd.Id</td>
                    <td>@Html.ActionLink(prd.ProductName,"Details","Products", new {id=prd.Id},null)</td>
                </tr>
            }
        </table>
    </div>
</div>